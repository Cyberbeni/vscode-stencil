{
    "comments": {
        "blockComment": [ "<!--", "-->" ]
    },
    "brackets": [],
    "surroundingPairs": [],
    "autoClosingPairs": [
        [ "{{", "}}" ],
        [ "{%", "%}" ],
        [ "{#", "#}" ],
    ],
    "indentationRules": {
        "increaseIndentPattern": "\\{%\\s(block|if|filter|for)(?!.*\\{%\\send\\1)|\\{%\\s(?:elif|else)(?!.*\\{%\\sendif)|\\{%\\s(?:empty)(?!.*\\{%\\sendfor)|<(?!(?:area|base|br|col|frame|hr|html|img|input|link|meta|param|wbr)\\b|[^>]*/>)([A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>(?!.*</\\2>)|<!--(?!.*-->)",
        "decreaseIndentPattern": "^\\s*(\\{%\\s(?:elif|else|empty|endblock|endif|endfilter|endfor)|</(?!html)[A-Za-z0-9]+\\b[^>]*>|-->)"
    }
}